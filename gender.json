{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Gender distribution for the top 10 lowest suicide rate",
    "background": null,
    "height": 200,
    "width": 400,
    "data": {"url": "Countrydata.csv"},
    "mark": "bar",
    "transform": [
        {"fold": ["male population", "female population"], "as": ["Gender", "value"]},
        {"filter": "datum.unemployment > 0"},
        {"filter": "datum.GDP > 0"},
        {"filter": "datum['press freedom'] > 0"},
        {"filter": "datum.suicidemortalityrate > 0"},
        {"filter": "datum.suicidemortalityrate < 2.8"},
        {
          "filter": "datum.country !== 'Maldives'"
        }
    ],
    "encoding": {
      "x": {
        "field": "value",
        "type": "quantitative",
        "title": null,
        "stack": "normalize",
        "axis":{"grid": false}
      },
      "y": {
        "sort": {"op":"mean", "field": "suicidemortalityrate", "order":"ascending"},
        "field": "country",
        "type": "ordinal",
        "title": null,
        "axis":{"grid": false}
      },
      "color": {
      "type": "nominal",
      "field": "Gender",
      "scale": {
        "range": ["#E6A6C7", "#2768A4"]
      },
      "legend": null
    },
    "tooltip":[
      {"field": "continent", "type": "nominal", "title":"Continent"},
      {"field": "female population", "type": "quantitative", "format": ".3s", "title":"Female Population (people)"},
      {"field": "male population", "type": "quantitative", "format": ".3s", "title":"Memale Population (people)"},
      {"field": "suicidemortalityrate", "type": "quantitative", "format": ",", "title":"Suicide rate per 100,000 population"}
    ]
    },
    "config": {
  "view": {
     "stroke": "transparent"
  }
}
  }